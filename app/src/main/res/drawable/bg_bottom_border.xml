<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 배경 색상 -->
    <item>
        <shape>
            <solid android:color="@color/transparent"/>
        </shape>
    </item>

    <!-- 테두리 추가 (inset으로 조정) -->
    <item android:left="-2dp" android:top="-2dp" android:right="-2dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/font3"/>
        </shape>
    </item>
</layer-list>
