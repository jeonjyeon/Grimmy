<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darker"
    tools:context=".BirthYearFragment">

    <TextView
        android:id="@+id/year_page_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2/4"
        android:fontFamily="@font/pretendard_bold"
        android:textSize="24sp"
        android:textColor="@color/gray3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="20dp"
        />

    <TextView
        android:id="@+id/year_nickname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ㅇㅇㅇㅇㅇ"
        android:fontFamily="@font/pretendard_bold"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="124dp"
        />
    <TextView
        android:id="@+id/year_nickname2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="님의"
        android:fontFamily="@font/pretendard_bold"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintStart_toEndOf="@id/year_nickname_tv"
        app:layout_constraintTop_toTopOf="@id/year_nickname_tv"
        app:layout_constraintBottom_toBottomOf="@id/year_nickname_tv"
    />

    <TextView
        android:id="@+id/year_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="출생년도를 알려주세요"
        android:fontFamily="@font/pretendard_bold"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="@id/year_nickname_tv"
        app:layout_constraintTop_toBottomOf="@id/year_nickname_tv"
        />

    <NumberPicker
        android:id="@+id/year_picker_np"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:theme="@style/NumberPickerStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/year_title_tv"
        app:layout_constraintBottom_toBottomOf="@id/year_next_btn_tv"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />

    <TextView
        android:id="@+id/year_next_btn_tv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="다음"
        android:textColor="@color/gray8"
        android:fontFamily="@font/pretendard_semi_bold"
        android:textSize="20sp"
        android:background="@drawable/bg_cancel_btn"
        android:gravity="center"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>