<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darker"
    tools:context=".NicknameFragment">

    <TextView
        android:id="@+id/nickname_page_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1/4"
        android:fontFamily="@font/pretendard_bold"
        android:textSize="24sp"
        android:textColor="@color/gray3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="20dp"
        />

    <TextView
        android:id="@+id/nickname_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가입을 축하드려요!\n닉네임을 설정해 주세요"
        android:fontFamily="@font/pretendard_bold"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="124dp"
        />

    <EditText
        android:id="@+id/nickname_nickname_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="5글자 내로 입력해 주세요"
        android:textColorHint="@color/gray3"
        android:maxLength="5"
        android:fontFamily="@font/pretendard_semi_bold"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nickname_title_tv"
        app:layout_constraintBottom_toTopOf="@id/nickname_next_iv"
        android:layout_marginStart="20dp"
        />

    <TextView
        android:id="@+id/nickname_nickname_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/5"
        android:fontFamily="@font/pretendard_semi_bold"
        android:textColor="@color/gray3"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/nickname_nickname_et"
        app:layout_constraintBottom_toBottomOf="@id/nickname_nickname_et"
        android:layout_marginEnd="20dp"
        />

    <ImageView
        android:id="@+id/nickname_next_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_next_off"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>