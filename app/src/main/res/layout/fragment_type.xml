<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darker"
    tools:context=".TypeFragment">
    <TextView
        android:id="@+id/type_page_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4/4"
        android:fontFamily="@font/pretendard_bold"
        android:textSize="24sp"
        android:textColor="@color/gray3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="20dp"
        />

    <TextView
        android:id="@+id/type_nickname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ㅇㅇㅇ님의"
        android:fontFamily="@font/pretendard_bold"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="124dp"
        />

    <TextView
        android:id="@+id/type_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="입시 유형은 무엇인가요?"
        android:fontFamily="@font/pretendard_bold"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="@id/type_nickname_tv"
        app:layout_constraintTop_toBottomOf="@id/type_nickname_tv"
        />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/type_title_tv"
        app:layout_constraintBottom_toBottomOf="@id/type_next_btn_iv"
        android:columnCount="3"
        android:useDefaultMargins="true"
        >

        <ImageView
            android:id="@+id/type_basic_design_btn_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_basic_design"
            />

        <ImageView
            android:id="@+id/type_watercolor_painting_btn_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_watercolor_painting"
            />

        <ImageView
            android:id="@+id/type_change_of_thought_btn_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_a_change_of_thought"
            />

        <ImageView
            android:id="@+id/type_western_painting_btn_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_western_painting"
            />

        <ImageView
            android:id="@+id/type_oriental_painting_btn_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_oriental_painting"
            />

        <ImageView
            android:id="@+id/type_adult_btn_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_plastic_arts"
            />

        <ImageView
            android:id="@+id/type_ideas_and_expressions_btn_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_ideas_and_expressions"
            />

        <ImageView
            android:id="@+id/type_basic_literacy_btn_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_basic_literacy"
            />

        <ImageView
            android:id="@+id/type_drawing_btn_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_drawing"
            />

        <ImageView
            android:id="@+id/type_animation_btn_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_animation"
            />

        <ImageView
            android:id="@+id/type_portfolio_btn_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_portfolio"
            />

        <ImageView
            android:id="@+id/type_interview_btn_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_interview"
            />
    </GridLayout>

    <ImageView
        android:id="@+id/type_next_btn_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_next_off"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>