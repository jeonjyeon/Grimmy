<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/transparent">

    <LinearLayout
        android:id="@+id/dialog_add_class_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ 수업 추가"
            android:textColor="@color/font4"
            android:textSize="18sp"
            android:fontFamily="@font/pretendard_semi_bold"
            android:background="@drawable/bg_bottom_border"
            />

    </LinearLayout>



    <EditText
        android:id="@+id/dialog_class_name_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="수업명"
        android:background="@drawable/bg_box_border"
        android:textColor="@color/font3"
        android:textColorHint="@color/font3"
        android:fontFamily="@font/pretendard_medium"
        android:textSize="18sp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_add_class_ll"
        />

    <EditText
        android:id="@+id/class_place_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="장소"
        android:background="@drawable/bg_box_border"
        android:textColor="@color/font3"
        android:textColorHint="@color/font3"
        android:fontFamily="@font/pretendard_medium"
        android:textSize="18sp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_class_name_et"
        />


    <Spinner
        android:id="@+id/class_day_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_box_border"
        app:layout_constraintTop_toBottomOf="@id/class_place_et"
        />


    <TextView
        android:id="@+id/add_class_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ 추가 수업 등록"
        android:textColor="@color/font3"
        android:background="@drawable/bg_bottom_border"
        app:layout_constraintStart_toStartOf="@id/dialog_add_class_ll"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
