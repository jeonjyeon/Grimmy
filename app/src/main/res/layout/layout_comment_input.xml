<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_rectangle"
    android:paddingHorizontal="20dp">

    <EditText
        android:id="@+id/comment_title_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/font3"
        android:textColorHint="@color/bg_black2"
        android:fontFamily="@font/pretendard_medium"
        android:hint="제목"
        android:background="@drawable/bg_home_edit_text"
        android:paddingVertical="14dp"
        android:paddingHorizontal="15dp"
        android:imeOptions="actionDone"
        android:inputType="textNoSuggestions"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"/>

    <EditText
        android:id="@+id/comment_content_et"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="14sp"
        android:textColor="@color/gray4"
        android:textColorHint="@color/bg_black2"
        android:hint="내용을 입력해주세요"
        android:background="@drawable/bg_home_edit_text"
        android:paddingVertical="14dp"
        android:paddingHorizontal="15dp"
        android:imeOptions="actionDone"
        android:inputType="textNoSuggestions"
        android:gravity="top"
        app:layout_constraintTop_toBottomOf="@id/comment_title_et"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="25dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>