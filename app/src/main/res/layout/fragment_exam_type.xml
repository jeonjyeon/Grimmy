<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darker"
    tools:context=".ExamTypeFragment">

    <TextView
        android:id="@+id/type_page_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4/4"
        android:fontFamily="@font/pretendard_bold"
        android:textSize="24sp"
        android:textColor="@color/gray3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="20dp"
        />

    <TextView
        android:id="@+id/type_nickname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ㅇㅇㅇ님의"
        android:fontFamily="@font/pretendard_bold"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="124dp"
        />

    <TextView
        android:id="@+id/type_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="입시 유형은 무엇인가요?"
        android:fontFamily="@font/pretendard_bold"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="@id/type_nickname_tv"
        app:layout_constraintTop_toBottomOf="@id/type_nickname_tv"
        />

    <RelativeLayout
        android:id="@+id/type_type_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/type_title_tv"
        app:layout_constraintBottom_toTopOf="@id/type_next_btn_tv"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/type_basic_design_btn_tv"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="기초디자인"
            android:textColor="@color/font3"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/bg_rectangle"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            />

        <TextView
            android:id="@+id/type_watercolor_painting_btn_tv"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="수채화"
            android:textColor="@color/font3"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/bg_rectangle"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_toRightOf="@id/type_basic_design_btn_tv"
            android:layout_marginStart="15dp"
            />

        <TextView
            android:id="@+id/type_change_of_thought_btn_tv"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="사고의 전환"
            android:textColor="@color/font3"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/bg_rectangle"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_toRightOf="@id/type_watercolor_painting_btn_tv"
            android:layout_marginStart="15dp"
            />

        <TextView
            android:id="@+id/type_western_painting_btn_iv"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="서양화"
            android:textColor="@color/font3"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/bg_rectangle"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_below="@id/type_basic_design_btn_tv"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:id="@+id/type_oriental_painting_btn_tv"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="동양화"
            android:textColor="@color/font3"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/bg_rectangle"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_toRightOf="@id/type_western_painting_btn_iv"
            android:layout_alignTop="@id/type_western_painting_btn_iv"
            android:layout_marginStart="15dp"
            />

        <TextView
            android:id="@+id/type_adult_btn_tv"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="조소"
            android:textColor="@color/font3"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/bg_rectangle"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_toRightOf="@id/type_oriental_painting_btn_tv"
            android:layout_alignTop="@id/type_oriental_painting_btn_tv"
            android:layout_marginStart="15dp"
            />

        <TextView
            android:id="@+id/type_ideas_and_expressions_btn_tv"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="발상과 표현"
            android:textColor="@color/font3"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/bg_rectangle"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_below="@id/type_western_painting_btn_iv"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:id="@+id/type_basic_literacy_btn_tv"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="기초소양"
            android:textColor="@color/font3"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/bg_rectangle"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_toRightOf="@id/type_ideas_and_expressions_btn_tv"
            android:layout_alignTop="@id/type_ideas_and_expressions_btn_tv"
            android:layout_marginStart="15dp"
            />

        <TextView
            android:id="@+id/type_drawing_btn_tv"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="소묘"
            android:textColor="@color/font3"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/bg_rectangle"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_toRightOf="@id/type_basic_literacy_btn_tv"
            android:layout_alignTop="@id/type_basic_literacy_btn_tv"
            android:layout_marginStart="15dp"
            />

        <TextView
            android:id="@+id/type_animation_btn_tv"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="애니메이션"
            android:textColor="@color/font3"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/bg_rectangle"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_below="@id/type_ideas_and_expressions_btn_tv"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:id="@+id/type_portfolio_btn_tv"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="포트폴리오"
            android:textColor="@color/font3"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/bg_rectangle"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_toRightOf="@id/type_animation_btn_tv"
            android:layout_alignTop="@id/type_animation_btn_tv"
            android:layout_marginStart="15dp"
            />

        <TextView
            android:id="@+id/type_interview_btn_tv"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="면접"
            android:textColor="@color/font3"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/bg_rectangle"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_toRightOf="@id/type_portfolio_btn_tv"
            android:layout_alignTop="@id/type_portfolio_btn_tv"
            android:layout_marginStart="15dp"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/type_next_btn_tv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="다음"
        android:textColor="@color/gray8"
        android:fontFamily="@font/pretendard_semi_bold"
        android:textSize="20sp"
        android:background="@drawable/bg_cancel_btn"
        android:gravity="center"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>