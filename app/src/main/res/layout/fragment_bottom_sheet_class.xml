<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="460dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/darker"
    tools:context=".ClassBottomSheetFragment"
    android:paddingVertical="40dp">

    <TextView
        android:id="@+id/class_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="미술 학원"
        android:fontFamily="@font/pretendard_bold"
        android:textSize="24sp"
        android:textColor="@color/font3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingHorizontal="20dp"/>

    <TextView
        android:id="@+id/class_place_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="플라워 임시 미술 학원"
        android:fontFamily="@font/pretendard_medium"
        android:textSize="18sp"
        android:textColor="@color/font3"
        app:layout_constraintTop_toBottomOf="@id/class_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingHorizontal="20dp"
        android:paddingVertical="5dp"
        />

    <LinearLayout
        android:id="@+id/class_schedule_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/class_place_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        >
        <TextView
            android:id="@+id/class_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="화요일"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/font3"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/class_start_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09:00"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/font3"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/class_day"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="~"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/font3"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/class_end_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:00"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/font3"
            android:textSize="16sp"
            />
    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/class_edit_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/class_schedule_ll"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:id="@+id/class_edit_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:paddingVertical="10dp"
            />

        <TextView
            android:id="@+id/class_edit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수정"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="16sp"
            android:textColor="@color/gray8"
            app:layout_constraintTop_toTopOf="@id/class_edit_iv"
            app:layout_constraintBottom_toBottomOf="@id/class_edit_iv"
            app:layout_constraintStart_toEndOf="@id/class_edit_iv"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            />
        <ImageView
            android:id="@+id/class_edit_next_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_next"
            app:layout_constraintTop_toTopOf="@id/class_edit_iv"
            app:layout_constraintBottom_toBottomOf="@id/class_edit_iv"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingStart="0dp"
            android:paddingEnd="20dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/class_delete_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/class_edit_cl"
        >
        <ImageView
            android:id="@+id/class_delete_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="5dp"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:paddingVertical="10dp"
            />

        <TextView
            android:id="@+id/class_delete_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="삭제"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="16sp"
            android:textColor="@color/gray8"
            app:layout_constraintTop_toTopOf="@id/class_delete_iv"
            app:layout_constraintBottom_toBottomOf="@id/class_delete_iv"
            app:layout_constraintStart_toEndOf="@id/class_delete_iv"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            />
        <ImageView
            android:id="@+id/class_delete_next_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_next"
            app:layout_constraintTop_toTopOf="@id/class_delete_iv"
            app:layout_constraintBottom_toBottomOf="@id/class_delete_iv"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingStart="0dp"
            android:paddingEnd="20dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
