<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="11dp">

    <EditText
        android:id="@+id/goal_week_edittext_et"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_home_edit_text"
        android:hint="이번 주의 목표를 작성해보세요"
        android:textColorHint="@color/bg_black2"
        android:textSize="14sp"
        android:textColor="@color/font4"
        android:fontFamily="@font/pretendard_regular"
        android:gravity="center_vertical"
        android:paddingStart="45dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/goal_week_checkbox_iv"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:src="@drawable/img_checkbox_off"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="@id/goal_week_edittext_et"
        app:layout_constraintBottom_toBottomOf="@id/goal_week_edittext_et"
        app:layout_constraintStart_toStartOf="@id/goal_week_edittext_et"/>

</androidx.constraintlayout.widget.ConstraintLayout>