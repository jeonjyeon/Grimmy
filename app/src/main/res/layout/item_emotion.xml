<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="20dp"
    android:paddingVertical="10dp"
    >

    <!-- 감정 아이콘 -->
    <ImageView
        android:id="@+id/item_emotion_iv"
        android:layout_width="47dp"
        android:layout_height="48dp"
        android:src="@drawable/img_emotion_happy"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <!-- 감정 이름 -->
    <TextView
        android:id="@+id/item_emotion_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기쁨"
        android:fontFamily="@font/pretendard_semi_bold"
        android:textSize="19sp"
        android:textColor="@color/font3"
        app:layout_constraintTop_toTopOf="@id/item_emotion_iv"
        app:layout_constraintBottom_toBottomOf="@id/item_emotion_iv"
        app:layout_constraintStart_toEndOf="@id/item_emotion_iv"
        android:padding="10dp"
        android:layout_marginStart="10dp"
        />

    <!-- 감정 퍼센트 -->
    <TextView
        android:id="@+id/item_emotion_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="40%"
        android:fontFamily="@font/pretendard_semi_bold"
        android:textSize="19sp"
        android:textColor="@color/main_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_emotion_iv"
        app:layout_constraintBottom_toBottomOf="@id/item_emotion_iv"
        />
</androidx.constraintlayout.widget.ConstraintLayout>