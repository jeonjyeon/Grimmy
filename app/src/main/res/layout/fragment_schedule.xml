<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScheduleFragment"
    android:background="@color/darker">

    <!-- 상단 프로필 및 알람 -->
    <FrameLayout
        android:id="@+id/schedule_profile_image_fl"
        android:layout_width="43dp"
        android:layout_height="43dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        >

        <!-- 배경 원 -->
        <ImageView
            android:id="@+id/schedule_profile_background_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_circle"
            android:scaleType="centerCrop"
            app:tint="@color/white"/>

        <!-- 캐릭터 -->
        <ImageView
            android:id="@+id/schedule_profile_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/img_character"
            android:scaleType="fitCenter"
            android:padding="5dp"/>
    </FrameLayout>


    <TextView
        android:id="@+id/schedule_user_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="김민우님"
        android:fontFamily="@font/pretendard_semi_bold"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/schedule_profile_image_fl"
        app:layout_constraintBottom_toBottomOf="@id/schedule_profile_image_fl"
        app:layout_constraintStart_toEndOf="@id/schedule_profile_image_fl"
        android:layout_marginStart="10dp"
        />

    <ImageView
        android:id="@+id/schedule_alarm_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_alarm"
        android:contentDescription="알람"
        app:layout_constraintTop_toTopOf="@id/schedule_profile_image_fl"
        app:layout_constraintBottom_toBottomOf="@id/schedule_profile_image_fl"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        />

    <LinearLayout
        android:id="@+id/schedule_timetable_title_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/schedule_profile_image_fl"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        >

        <!-- 2024 시간표 제목 -->
        <TextView
            android:id="@+id/schedule_timetable_year_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024년"
            android:textColor="@color/font3"
            android:fontFamily="@font/pretendard_semi_bold"
            android:textSize="22sp"
            android:layout_marginStart="10dp"/>

        <!-- 2024 시간표 제목 -->
        <TextView
            android:id="@+id/schedule_timetable_timetable_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시간표"
            android:textColor="@color/font3"
            android:fontFamily="@font/pretendard_semi_bold"
            android:textSize="22sp"
            android:layout_marginStart="5dp"/>

        <!--        시간표 아래 화살표..?-->
        <ImageView
            android:id="@+id/schedule_timetable_title_down_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_date_picker"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/schedule_timetable_icon_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/schedule_timetable_title_ll"
        app:layout_constraintBottom_toBottomOf="@id/schedule_timetable_title_ll"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        >
        <!-- 추가 버튼 -->
        <ImageView
            android:id="@+id/schedule_add_class_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/ic_schedule_add" />

        <!--        시간표 목록-->
        <ImageView
            android:id="@+id/schedule_timetable_list_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_schedule_list"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <ScrollView
        android:id="@+id/schedule_timetable_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/schedule_timetable_title_ll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="125dp"
        >

        <!-- 시간표 그리드 -->
        <GridLayout
            android:id="@+id/schedule_timetable_grid_gv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="6"
            android:rowCount="6"
            android:orientation="horizontal"
            >

            <!-- 헤더 행 -->
            <TextView
                android:id="@+id/schedule_week_time_tv"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:text=""
                android:background="@drawable/bg_schedule_cell_top_left"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/schedule_monday_tv"
                android:layout_width="70dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:text="월"
                android:textColor="@color/font4"
                android:fontFamily="@font/pretendard_medium"
                android:textSize="11sp"
                android:background="@drawable/bg_schedule_cell_top"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/schedule_tuesday_tv"
                android:layout_width="70dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:text="화"
                android:textColor="@color/font4"
                android:fontFamily="@font/pretendard_medium"
                android:textSize="11sp"
                android:background="@drawable/bg_schedule_cell_top"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/schedule_wednesday_tv"
                android:layout_width="70dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:text="수"
                android:textColor="@color/font4"
                android:fontFamily="@font/pretendard_medium"
                android:textSize="11sp"
                android:background="@drawable/bg_schedule_cell_top"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/schedule_thursday_tv"
                android:layout_width="70dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:text="목"
                android:textColor="@color/font4"
                android:fontFamily="@font/pretendard_medium"
                android:textSize="11sp"
                android:background="@drawable/bg_schedule_cell_top"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/schedule_friday_tv"
                android:layout_width="70dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:text="금"
                android:textColor="@color/font4"
                android:fontFamily="@font/pretendard_medium"
                android:textSize="11sp"
                android:background="@drawable/bg_schedule_cell_top_right"
                android:gravity="center"
                />

            <!-- 8시 -->
            <TextView
                android:id="@+id/schedule_time0800_tv"
                android:layout_height="75dp"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                android:text="8"
                android:textColor="@color/font4"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="11sp"
                android:background="@drawable/bg_schedule_cell_left"
                android:gravity="center"/>

            <TextView
                android:id="@+id/schedule_monday0800_tv"
                android:layout_gravity="fill"
                android:text=""
                android:background="@drawable/bg_schedule_cell"
                android:gravity="center"
                android:tag="monday0800"/>
            <TextView
                android:id="@+id/schedule_tuesday0800_tv"
                android:layout_gravity="fill"
                android:text=""
                android:background="@drawable/bg_schedule_cell"
                android:gravity="center"
                android:tag="tuesday0800"/>
            <TextView
                android:id="@+id/schedule_wednesday0800_tv"
                android:layout_gravity="fill"
                android:text=""
                android:background="@drawable/bg_schedule_cell"
                android:gravity="center"
                android:tag="wednesday0800"/>
            <TextView
                android:id="@+id/schedule_thursday0800_tv"
                android:layout_gravity="fill"
                android:text=""
                android:background="@drawable/bg_schedule_cell"
                android:gravity="center"
                android:tag="thursday0800"/>
            <TextView
                android:id="@+id/schedule_friday0800_tv"
                android:layout_gravity="fill"
                android:text=""
                android:background="@drawable/bg_schedule_cell_right"
                android:gravity="center"
                android:tag="friday0800"/>

            <!-- 9시 -->
            <TextView
                android:id="@+id/schedule_time0900_tv"
                android:layout_height="75dp"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                android:text="9"
                android:textColor="@color/font4"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="11sp"
                android:background="@drawable/bg_schedule_cell_left"
                android:gravity="center"/>
            <TextView
                android:id="@+id/schedule_monday0900_tv"
                android:layout_gravity="fill"
                android:text=""
                android:background="@drawable/bg_schedule_cell"
                android:gravity="center"
                android:tag="monday0900"/>
            <TextView
                android:id="@+id/schedule_tuesday0900_tv"
                android:layout_gravity="fill"
                android:text=""
                android:background="@drawable/bg_schedule_cell"
                android:gravity="center"
                android:tag="tuesday0900"/>
            <TextView
                android:id="@+id/schedule_wednesday0900_tv"
                android:layout_gravity="fill"
                android:text=""
                android:background="@drawable/bg_schedule_cell"
                android:gravity="center"
                android:tag="wednesday0900"/>
            <TextView
                android:id="@+id/schedule_thursday0900_tv"
                android:layout_gravity="fill"
                android:text=""
                android:background="@drawable/bg_schedule_cell"
                android:gravity="center"
                android:tag="thursday0900"/>
            <TextView
                android:id="@+id/schedule_friday0900_tv"
                android:layout_gravity="fill"
                android:text=""
                android:background="@drawable/bg_schedule_cell_right"
                android:gravity="center"
                android:tag="friday0900"/>

            <!-- 10시 -->
            <TextView
                android:id="@+id/schedule_time1000_tv"
                android:layout_height="75dp"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                android:text="10"
                android:textColor="@color/font4"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="11sp"
                android:background="@drawable/bg_schedule_cell_left"
                android:gravity="center"/>
            <TextView
                android:id="@+id/schedule_monday1000_tv"
                android:layout_gravity="fill"
                android:text=""
                android:background="@drawable/bg_schedule_cell"
                android:gravity="center"
                android:tag="monday1000"/>
            <TextView
                android:id="@+id/schedule_tuesday1000_tv"
                android:layout_gravity="fill"
                android:text=""
                android:background="@drawable/bg_schedule_cell"
                android:gravity="center"
                android:tag="tuesday1000"/>
            <TextView
                android:id="@+id/schedule_wednesday1000_tv"
                android:layout_gravity="fill"
                android:text=""
                android:background="@drawable/bg_schedule_cell"
                android:gravity="center"
                android:tag="wednesday1000"/>
            <TextView
                android:id="@+id/schedule_thursday1000_tv"
                android:layout_gravity="fill"
                android:text=""
                android:background="@drawable/bg_schedule_cell"
                android:gravity="center"
                android:tag="thursday1000"/>
            <TextView
                android:id="@+id/schedule_friday1000_tv"
                android:layout_gravity="fill"
                android:text=""
                android:background="@drawable/bg_schedule_cell_right"
                android:gravity="center"
                android:tag="friday1000"/>

            <!-- 11시 -->
            <TextView
                android:id="@+id/schedule_time1100_tv"
                android:layout_height="75dp"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                android:text="11"
                android:textColor="@color/font4"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="11sp"
                android:background="@drawable/bg_schedule_cell_left"
                android:gravity="center"/>
            <TextView
                android:id="@+id/schedule_monday1100_tv"
                android:layout_gravity="fill"
                android:text=""
                android:background="@drawable/bg_schedule_cell"
                android:gravity="center"
                android:tag="monday1100"/>
            <TextView
                android:id="@+id/schedule_tuesday1100_tv"
                android:layout_gravity="fill"
                android:text=""
                android:background="@drawable/bg_schedule_cell"
                android:gravity="center"
                android:tag="tuesday1100"/>
            <TextView
                android:id="@+id/schedule_wednesday1100_tv"
                android:layout_gravity="fill"
                android:text=""
                android:background="@drawable/bg_schedule_cell"
                android:gravity="center"
                android:tag="wednesday1100"/>
            <TextView
                android:id="@+id/schedule_thursday1100_tv"
                android:layout_gravity="fill"
                android:text=""
                android:background="@drawable/bg_schedule_cell"
                android:gravity="center"
                android:tag="thursday1100"/>
            <TextView
                android:id="@+id/schedule_friday1100_tv"
                android:layout_gravity="fill"
                android:text=""
                android:background="@drawable/bg_schedule_cell_right"
                android:gravity="center"
                android:tag="friday1100"/>

            <!-- 12시 -->
            <TextView
                android:id="@+id/schedule_time1200_tv"
                android:layout_height="75dp"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                android:text="12"
                android:textColor="@color/font4"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="11sp"
                android:background="@drawable/bg_schedule_cell_left"
                android:gravity="center"/>
            <TextView
                android:id="@+id/schedule_monday1200_tv"
                android:layout_gravity="fill"
                android:text=""
                android:background="@drawable/bg_schedule_cell"
                android:gravity="center"
                android:tag="monday1200"/>
            <TextView
                android:id="@+id/schedule_tuesday1200_tv"
                android:layout_gravity="fill"
                android:text=""
                android:background="@drawable/bg_schedule_cell"
                android:gravity="center"
                android:tag="tuesday1200"/>
            <TextView
                android:id="@+id/schedule_wednesday1200_tv"
                android:layout_gravity="fill"
                android:text=""
                android:background="@drawable/bg_schedule_cell"
                android:gravity="center"
                android:tag="wednesday1200"/>
            <TextView
                android:id="@+id/schedule_thursday1200_tv"
                android:layout_gravity="fill"
                android:text=""
                android:background="@drawable/bg_schedule_cell"
                android:gravity="center"
                android:tag="thursday1200"/>
            <TextView
                android:id="@+id/schedule_friday1200_tv"
                android:layout_gravity="fill"
                android:text=""
                android:background="@drawable/bg_schedule_cell_right"
                android:gravity="center"
                android:tag="friday1200"/>

            <!-- 13시 -->
            <TextView
                android:id="@+id/schedule_time1300_tv"
                android:layout_height="75dp"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                android:text="13"
                android:textColor="@color/font4"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="11sp"
                android:background="@drawable/bg_schedule_cell_bottom_left"
                android:gravity="center"/>
            <TextView
                android:id="@+id/schedule_monday1300_tv"
                android:layout_gravity="fill"
                android:text=""
                android:background="@drawable/bg_schedule_cell_bottom"
                android:gravity="center"
                android:tag="monday1300"/>
            <TextView
                android:id="@+id/schedule_tuesday1300_tv"
                android:layout_gravity="fill"
                android:text=""
                android:background="@drawable/bg_schedule_cell_bottom"
                android:gravity="center"
                android:tag="tuesday1300"/>
            <TextView
                android:id="@+id/schedule_wednesday1300_tv"
                android:layout_gravity="fill"
                android:text=""
                android:background="@drawable/bg_schedule_cell_bottom"
                android:gravity="center"
                android:tag="wednesday1300"/>
            <TextView
                android:id="@+id/schedule_thursday1300_tv"
                android:layout_gravity="fill"
                android:text=""
                android:background="@drawable/bg_schedule_cell_bottom"
                android:gravity="center"
                android:tag="thursday1300"/>
            <TextView
                android:id="@+id/schedule_friday1300_tv"
                android:layout_gravity="fill"
                android:text=""
                android:background="@drawable/bg_schedule_cell_bottom_right"
                android:gravity="center"
                android:tag="friday1300"/>
        </GridLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/schedule_add_class_frame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>