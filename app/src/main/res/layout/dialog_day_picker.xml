<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_dialog"
    android:padding="20dp">

    <LinearLayout
        android:id="@+id/day_picker_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/day_picker_monday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="월요일"
            android:fontFamily="@font/pretendard_semi_bold"
            android:textColor="@color/gray9"
            android:textSize="19sp"
            android:padding="10dp"/>
        <TextView
            android:id="@+id/day_picker_tuesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="화요일"
            android:fontFamily="@font/pretendard_semi_bold"
            android:textColor="@color/gray9"
            android:textSize="19sp"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/day_picker_wednesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="수요일"
            android:fontFamily="@font/pretendard_semi_bold"
            android:textColor="@color/gray9"
            android:textSize="19sp"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/day_picker_thursday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="목요일"
            android:fontFamily="@font/pretendard_semi_bold"
            android:textColor="@color/gray9"
            android:textSize="19sp"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/day_picker_friday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="금요일"
            android:fontFamily="@font/pretendard_semi_bold"
            android:textColor="@color/gray9"
            android:textSize="19sp"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/day_picker_saturday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="토요일"
            android:fontFamily="@font/pretendard_semi_bold"
            android:textColor="@color/gray9"
            android:textSize="19sp"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/day_picker_sunday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="일요일"
            android:fontFamily="@font/pretendard_semi_bold"
            android:textColor="@color/gray9"
            android:textSize="19sp"
            android:padding="10dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/day_picker_cancel_btn_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="취소"
        android:textSize="19sp"
        android:textColor="@color/gray8"
        android:fontFamily="@font/pretendard_semi_bold"
        android:background="@drawable/bg_cancel_btn"
        android:paddingHorizontal="66dp"
        android:paddingVertical="18dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/day_picker_ll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_space"/>

    <Space
        android:id="@+id/btn_space"
        android:layout_width="10dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/day_picker_cancel_btn_tv"
        app:layout_constraintEnd_toStartOf="@id/day_picker_ok_btn_tv"
        app:layout_constraintTop_toTopOf="@id/day_picker_ok_btn_tv"
        />

    <TextView
        android:id="@+id/day_picker_ok_btn_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확인"
        android:textSize="19sp"
        android:textColor="@color/gray8"
        android:fontFamily="@font/pretendard_semi_bold"
        android:background="@drawable/bg_ok_btn"
        android:paddingHorizontal="66dp"
        android:paddingVertical="18dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/day_picker_ll"
        app:layout_constraintStart_toEndOf="@id/btn_space"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
