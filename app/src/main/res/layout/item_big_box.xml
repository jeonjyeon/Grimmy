<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_big_box_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rectangle"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/goal_item_title_title_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font3"
            android:textColorHint="@color/font3"
            android:hint="타이틀"
            android:textSize="16sp"
            android:fontFamily="@font/pretendard_regular"
            android:background="@color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"/>

        <ImageView
            android:id="@+id/goal_item_add_edittext_iv"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:src="@drawable/btn_plus"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="27dp"
            app:tint="@color/font4"/>

        <LinearLayout
            android:id="@+id/big_box_edittext_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/goal_item_title_title_et"
            android:layout_marginTop="23dp"
            android:layout_marginBottom="13dp"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/item_big_box_frame"
        android:layout_marginTop="17dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>